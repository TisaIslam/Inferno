<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_card"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/cardbg"
    android:orientation="vertical"
    android:weightSum="1"
    tools:context="com.example.du_inferno.myapplication.CardActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="0sp"
                android:orientation="vertical">

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                    android:layout_weight="1"
                    card_view:cardCornerRadius="4sp"
                    card_view:cardUseCompatPadding="true"
                    card_view:cardBackgroundColor="@color/LightBlue"
                    card_view:cardElevation="4dp"
                    android:clickable="true"
                    android:id="@+id/water"
                    >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:weightSum="2">


                        <LinearLayout
                            android:layout_width="90dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="horizontal"
                            android:weightSum="1">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:id="@+id/drop"
                                android:scaleType="fitXY"
                                android:src="@drawable/water"
                                android:layout_weight="1.17" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="90dp"
                            android:layout_height="match_parent"
                            android:orientation="horizontal"
                            android:background="@color/PowderBlue"
                            android:layout_weight="1.14"
                            android:weightSum="1">

                            <TextView
                                android:layout_height="152dp"
                                android:layout_width="190dp"
                                android:text="Water Resources"
                                android:textAppearance="?android:attr/textAppearanceLarge"
                                android:textColor="#FFFFFF"
                                android:textStyle="bold"
                                android:textSize="30sp"
                                android:typeface="serif"
                                android:gravity="center"
                                android:layout_margin="1dp" />
                            </LinearLayout>


                    </LinearLayout>

                </android.support.v7.widget.CardView>


                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                    android:layout_weight="1"
                    card_view:cardCornerRadius="4sp"
                    card_view:cardUseCompatPadding="true"
                    card_view:cardBackgroundColor="@color/LightBlue"
                    card_view:cardElevation="4dp"
                    android:clickable="true"
                    android:id="@+id/hos"
                    >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:weightSum="2">


                    <LinearLayout
                        android:layout_width="90dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:weightSum="1">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:id="@+id/hospi"
                            android:scaleType="fitXY"
                            android:src="@drawable/hospital"
                            android:layout_weight="1.17" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="90dp"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:background="@color/PowderBlue"
                        android:layout_weight="1.14"
                        android:weightSum="1">

                        <TextView
                            android:layout_height="152dp"
                            android:layout_width="190dp"
                            android:text="Nearby Hospitals"
                            android:textAppearance="?android:attr/textAppearanceLarge"
                            android:textColor="#FFFFFF"
                            android:textStyle="bold"
                            android:textSize="30sp"
                            android:typeface="serif"
                            android:gravity="center"
                            android:layout_margin="1dp" />
                    </LinearLayout>


                </LinearLayout>

                </android.support.v7.widget.CardView>



                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                    android:layout_weight="1"
                    card_view:cardCornerRadius="4sp"
                    card_view:cardUseCompatPadding="true"
                    card_view:cardBackgroundColor="@color/LightBlue"
                    card_view:cardElevation="4dp"
                    android:clickable="true"
                    android:id="@+id/fire"
                    >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:weightSum="2">


                        <LinearLayout
                            android:layout_width="90dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="horizontal"
                            android:weightSum="1">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:id="@+id/fireman"
                                android:scaleType="fitXY"
                                android:src="@drawable/fireman"
                                android:layout_weight="1.17" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="90dp"
                            android:layout_height="match_parent"
                            android:orientation="horizontal"
                            android:background="@color/PowderBlue"
                            android:layout_weight="1.14"
                            android:weightSum="1">

                            <TextView
                                android:layout_height="152dp"
                                android:layout_width="190dp"
                                android:text="Fire Stations"
                                android:textAppearance="?android:attr/textAppearanceLarge"
                                android:textColor="#FFFFFF"
                                android:textStyle="bold"
                                android:textSize="30sp"
                                android:typeface="serif"
                                android:gravity="center"
                                android:layout_margin="1dp" />
                        </LinearLayout>


                    </LinearLayout>

                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                    android:layout_weight="1"
                    card_view:cardCornerRadius="4sp"
                    card_view:cardUseCompatPadding="true"
                    card_view:cardBackgroundColor="@color/LightBlue"
                    card_view:cardElevation="4dp"
                    android:clickable="true"
                    android:id="@+id/euip"
                    >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:weightSum="2">


                        <LinearLayout
                            android:layout_width="90dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="horizontal"
                            android:weightSum="1">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:id="@+id/eqipment"
                                android:scaleType="fitXY"
                                android:src="@drawable/eqipment"
                                android:layout_weight="1.17" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="100dp"
                            android:layout_height="match_parent"
                            android:orientation="horizontal"
                            android:background="@color/PowderBlue"
                            android:layout_weight="1.14"
                            android:weightSum="1">

                            <TextView
                                android:layout_height="152dp"
                                android:layout_width="190dp"
                                android:text="Eqipments"
                                android:textAppearance="?android:attr/textAppearanceLarge"
                                android:textColor="#FFFFFF"
                                android:textStyle="bold"
                                android:textSize="30sp"
                                android:typeface="serif"
                                android:gravity="center"
                                android:layout_margin="1dp" />
                        </LinearLayout>


                    </LinearLayout>

                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                    android:layout_weight="1"
                    card_view:cardCornerRadius="4sp"
                    card_view:cardUseCompatPadding="true"
                    card_view:cardBackgroundColor="@color/LightBlue"
                    card_view:cardElevation="4dp"
                    android:clickable="true"
                    android:id="@+id/vol"
                    >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:weightSum="2">


                        <LinearLayout
                            android:layout_width="90dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="horizontal"
                            android:weightSum="1">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:id="@+id/volunteers"
                                android:scaleType="fitXY"
                                android:src="@drawable/volunteers"
                                android:layout_weight="1.17" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="90dp"
                            android:layout_height="match_parent"
                            android:orientation="horizontal"
                            android:background="@color/PowderBlue"
                            android:layout_weight="1.14"
                            android:weightSum="1">

                            <TextView
                                android:layout_height="152dp"
                                android:layout_width="190dp"
                                android:text="Volunteer List"
                                android:textAppearance="?android:attr/textAppearanceLarge"
                                android:textColor="#FFFFFF"
                                android:textStyle="bold"
                                android:textSize="30sp"
                                android:typeface="serif"
                                android:gravity="center"
                                android:layout_margin="1dp" />
                        </LinearLayout>


                    </LinearLayout>

                </android.support.v7.widget.CardView>


                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                    android:layout_weight="1"
                    card_view:cardCornerRadius="4sp"
                    card_view:cardUseCompatPadding="true"
                    card_view:cardBackgroundColor="@color/LightBlue"
                    card_view:cardElevation="4dp"
                    android:clickable="true"
                    android:id="@+id/doc"
                    >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:weightSum="2">


                        <LinearLayout
                            android:layout_width="90dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="horizontal"
                            android:weightSum="1">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:id="@+id/faq"
                                android:scaleType="fitXY"
                                android:src="@drawable/faq"
                                android:layout_weight="1.17" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="90dp"
                            android:layout_height="match_parent"
                            android:orientation="horizontal"
                            android:background="@color/PowderBlue"
                            android:layout_weight="1.14"
                            android:weightSum="1">

                            <TextView
                                android:layout_height="152dp"
                                android:layout_width="190dp"
                                android:text="Lets know more!"
                                android:textAppearance="?android:attr/textAppearanceLarge"
                                android:textColor="#FFFFFF"
                                android:textStyle="bold"
                                android:textSize="30sp"
                                android:typeface="serif"
                                android:gravity="center"
                                android:layout_margin="1dp" />
                        </LinearLayout>


                    </LinearLayout>

                </android.support.v7.widget.CardView>


                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                    android:layout_weight="1"
                    card_view:cardCornerRadius="4sp"
                    card_view:cardUseCompatPadding="true"
                    card_view:cardBackgroundColor="@color/LightBlue"
                    card_view:cardElevation="4dp"
                    android:clickable="true"
                    android:id="@+id/game"
                    >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:weightSum="2">


                        <LinearLayout
                            android:layout_width="90dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="horizontal"
                            android:weightSum="1">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:id="@+id/gameimage"
                                android:scaleType="fitXY"
                                android:src="@drawable/game"
                                android:layout_weight="1.17" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="90dp"
                            android:layout_height="match_parent"
                            android:orientation="horizontal"
                            android:background="@color/PowderBlue"
                            android:layout_weight="1.14"
                            android:weightSum="1">

                            <TextView
                                android:layout_height="152dp"
                                android:layout_width="190dp"
                                android:text="Play And Learn!"
                                android:textAppearance="?android:attr/textAppearanceLarge"
                                android:textColor="#FFFFFF"
                                android:textStyle="bold"
                                android:textSize="30sp"
                                android:typeface="serif"
                                android:gravity="center"
                                android:layout_margin="1dp" />
                        </LinearLayout>


                    </LinearLayout>

                </android.support.v7.widget.CardView>



            </LinearLayout>

    </ScrollView>

</LinearLayout>
