<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"

    tools:context="com.example.du_inferno.myapplication.SignUp_Activity">


    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="13dp"
        android:layout_marginStart="13dp"
        android:layout_marginTop="18dp"
        android:id="@+id/NameText"
        android:hint="Name"
        android:singleLine="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textMultiLine"
        android:ems="10"
        android:layout_below="@+id/NameText"
        android:layout_alignRight="@+id/NameText"
        android:layout_alignEnd="@+id/NameText"
        android:layout_marginTop="13dp"
        android:id="@+id/AddressText"
        android:hint="Address"
        android:layout_alignLeft="@+id/NameText"
        android:layout_alignStart="@+id/NameText" />


    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="phone"
        android:ems="10"
        android:layout_marginTop="11dp"
        android:id="@+id/PhoneText"
        android:hint="Phone Number"
        android:layout_below="@+id/AddressText"
        android:layout_alignLeft="@+id/AddressText"
        android:layout_alignStart="@+id/AddressText"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />


    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/passwordText"
        android:hint="Password"
        android:layout_below="@+id/emailText"
        android:layout_alignLeft="@+id/emailText"
        android:layout_alignStart="@+id/emailText"
        android:layout_marginTop="11dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />


    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:layout_marginTop="11dp"
        android:id="@+id/emailText"
        android:hint="Email ID"
        android:layout_below="@+id/PhoneText"
        android:layout_alignLeft="@+id/PhoneText"
        android:layout_alignStart="@+id/PhoneText"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:text="Sign Up"
        android:layout_width="150dp"
        android:layout_height="60dp"
        android:layout_marginTop="71dp"
        android:id="@+id/button"
        android:layout_below="@+id/passwordText"
        android:layout_centerHorizontal="true" />


</RelativeLayout>



